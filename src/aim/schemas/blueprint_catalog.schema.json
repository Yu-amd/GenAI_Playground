{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint Catalog Schema",
  "type": "object",
  "required": ["catalog_metadata", "blueprints"],
  "properties": {
    "catalog_metadata": {
      "type": "object",
      "required": ["version", "last_updated", "total_blueprints", "categories"],
      "properties": {
        "version": { "type": "string" },
        "last_updated": { "type": "string" },
        "total_blueprints": { "type": "integer", "minimum": 0 },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "blueprints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "blueprint_id", "name", "category", "complexity", "description", "shortDescription", "logo", "readiness_level", "status_badges", "tags", "status", "endpoint", "demo_assets", "aim_recipes", "blueprint_card", "microservices"
        ],
        "properties": {
          "blueprint_id": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "complexity": { "type": "string" },
          "description": { "type": "string" },
          "shortDescription": { "type": "string" },
          "logo": { "type": "string" },
          "readiness_level": { "type": "string" },
          "status_badges": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "status": { "type": "string" },
          "endpoint": { "type": "string" },
          "demo_assets": {
            "type": "object",
            "required": ["notebook", "demo_link"],
            "properties": {
              "notebook": { "type": "string" },
              "demo_link": { "type": "string" }
            },
            "additionalProperties": false
          },
          "aim_recipes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "hardware", "precision", "recipe_file"],
              "properties": {
                "name": { "type": "string" },
                "hardware": { "type": "string" },
                "precision": { "type": "string" },
                "recipe_file": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "blueprint_card": {
            "type": "object",
            "required": ["overview", "intended_use", "limitations", "architecture", "evaluation", "known_issues", "references"],
            "properties": {
              "overview": { "type": "string" },
              "intended_use": {
                "type": "array",
                "items": { "type": "string" }
              },
              "limitations": {
                "type": "array",
                "items": { "type": "string" }
              },
              "architecture": { "type": "string" },
              "evaluation": {
                "type": "array",
                "items": { "type": "string" }
              },
              "known_issues": {
                "type": "array",
                "items": { "type": "string" }
              },
              "references": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": false
          },
          "microservices": {
            "type": "object",
            "required": ["models", "functional"],
            "properties": {
              "models": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "logo", "tags"],
                  "properties": {
                    "name": { "type": "string" },
                    "logo": { "type": "string" },
                    "tags": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "functional": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "description", "tags"],
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "tags": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
} 