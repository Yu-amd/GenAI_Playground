{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Model Catalog Entry Schema",
  "type": "object",
  "required": [
    "model_id",
    "name",
    "builder",
    "huggingface_id"
  ],
  "properties": {
    "model_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "builder": {
      "type": "string"
    },
    "family": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "huggingface_id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "logo": {
      "type": "string"
    },
    "readiness_level": {
      "type": "string",
      "enum": [
        "Day-0 Available",
        "Tech Preview",
        "Production-Ready"
      ]
    },
    "status_badges": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "type": "string"
    },
    "endpoint": {
      "type": "string"
    },
    "demo_assets": {
      "type": "object",
      "properties": {
        "notebook": {
          "type": "string"
        },
        "demo_link": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "aim_recipes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "hardware",
          "precision",
          "recipe_file"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "hardware": {
            "type": "string"
          },
          "precision": {
            "type": "string",
            "enum": [
              "fp16",
              "bf16",
              "fp8",
              "int8",
              "int4"
            ]
          },
          "recipe_file": {
            "type": "string"
          }
        }
      }
    },
    "api_examples": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "model_card": {
      "type": "object",
      "properties": {
        "overview": {
          "type": "string"
        },
        "intended_use": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "limitations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "training_data": {
          "type": "string"
        },
        "evaluation": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "known_issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "references": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
